<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
      fx:controller="LoginWindowController">


    <children>
        <TextField fx:id="textFieldLogin" alignment="CENTER" promptText="Login" VBox.vgrow="ALWAYS"/>
        <PasswordField fx:id="textFieldPassword" alignment="CENTER" promptText="Password" VBox.vgrow="ALWAYS"/>
        <HBox prefHeight="25.0" prefWidth="150.0">
            <children>
                <Button fx:id="btnConnect" defaultButton="true" mnemonicParsing="false" onAction="#btnConnectAction"
                        text="Connect" HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnExit" cancelButton="true" mnemonicParsing="false" text="Exit" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </children>


</VBox>
